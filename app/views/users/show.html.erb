<div>
<% if current_user == @user %>
  <h2> Welcome, <%= @user.first_name %> </h2>
  <%= image_tag @user.avatar.url(:medium) %> 
  <h3> Here are your upcoming events: </h3>
  <% @upcoming_events.each do |upcoming_event| %>
  <%= upcoming_event.title %>
  <br>
  <% end %>
</div>
<div>
  <h3> Your past events: </h3>
  <% @pass_events.each do |pass_event| %>
  <%= pass_event.title %>
  <br>
  <% end %>
</div>
  <a href="/conversations"> View your conversations </a>
<% else %>
<div>
  <h2> <%= @user.first_name %> </h2>
  <h2> <%= @user.bio %> </h2>
  <h3> Here are their upcoming events: </h3>
  <% @user.events.each do |event| %>
 <a href= "/events/<%=event.id%>"> <%= event.title %></a>
  <% end %>
</div>

<a href="/conversations/new?user_id=<%=@user.id%>"><button type ="submit" class="btn btn-default btn-lg">Message <%= @user.first_name %></button></a>
<% end %>
