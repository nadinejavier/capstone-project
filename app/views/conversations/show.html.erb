            <div class="container">
              <div class="row">
                <div clas="col-md-4">
                 <section class="widget danish_widget_popular_entries">
                 <% if current_user == @conversation.originator %>
                    <h2 class="widget-title">Your Conversation with <%= @conversation.subject %> </h2>
                  <%else%>
                    <h2 class="widget-title">Your Conversation with <%= @conversation.originator.full_name %> </h2>
                  <%end%>
                    <ul>
      <% @conversation.receipts_for(current_user).each do |receipt| %>
                      <li>
                        <div class="popular-entry-container">
                          <div class="entry-image">
                            <a href="/users/<%=receipt.message.sender.id%>"><img src="<%=receipt.message.sender.avatar%>" alt="#"></a>
                          </div><!-- .entry-image -->
                          <div class="entry-content">
                            <h4 class="entry-title">
                            <%= receipt.message.body %>
                            </h4>
                            <span class="entry-category"><a href="/users/<%=receipt.message.sender.id%>"><%= receipt.message.sender.full_name %></a></span>
                            <span class="entry-datetime">  <%= receipt.message.created_at.strftime('%b %e, %l:%M %p') %></span>
                          </div><!-- .entry-content -->
                        </div><!-- .popular-entry-container -->
                      </li>
                     <%end%>
                    </ul>
            <%= form_tag conversation_messages_path(@conversation), method: :post do %>
                      <div>
                      <%= text_area_tag :body %>
                      </div>

                      <%= submit_tag "Send" %>
                    <% end %>
                  </section>
                </div> <!-- col-md-4 -->
              </div> <!-- row -->
            </div> <!-- container -->