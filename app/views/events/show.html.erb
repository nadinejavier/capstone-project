                            </div>
                            
                          </div>
                        </div>
                        <p class="form-submit"> 
                          <input name="submit" type="submit" id="submit" class="btn btn-danish btn-lg btn-block" value="Submit">
                        </p>
                  
                      </div><!-- #commentform -->
                    </div><!-- #respond -->
                  </div><!-- #comments -->
                  <% end %>

