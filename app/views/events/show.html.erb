<div ng-app="app">
  <div ng-controller = "ctrl" ng-init="setup()">
<h1> <%= @event.title %> </h1>

<h3> Info: </h3>

<%= @event.date.strftime("%a, %B %e") %>
<br>
<%= @event.start_time.strftime("%l:%M %p") %>
<br>
<%= @event.end_time.strftime("%l:%M %p") %>
<br>
<%= @event.address %>
<br>
<%= @event.description %>

<% if current_user && current_user.id = @event.hosted_by %>
    <button class="btn btn-primary">  <a href="/events/<%=@event.id%>/edit"> Edit Event </a> </button>
    <%= form_tag "/events/#{@event.id}", method: :delete do %>
    <input type="submit" value="DELETE">
  <% end %>
<%end%>

<% if current_user %>
  <button ng-click='attendEvent()'> Join Event</button>


  <button ng-click='leaveEvent()'> Leave Event</button>
<% else %>
  <p> Sign in to Join! </p>

<% end %>
  </div>
</div>