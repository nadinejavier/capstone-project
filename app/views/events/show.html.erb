            <div class="container">
              <div class="row">
                <div class="col-md-8">
                  <article class="post format-standard hentry">
                    <header class="entry-header">
                      <div class="heading-title">
                        <h1 class="entry-title"><%=@event.title%></h1>
                      </div>
                      <div class="entry-meta">
                        <span class="posted-on">Posted on <%=@event.created_at%></span>
                        <span class="byline"> by <span class="author vcard"><a class="url fn n" href="/users/<%=@host.id%>"><%=@host.first_name%></a></span></span>
                        <span class="reading-estimation"><a data-toggle="modal" href="/user_events?event_id=<%= @event.id%>" data-target="#myModal"> <%= @event.users.length %></a> Attending</span>
                        <span class="reading-estimation"><%=@event.comments.length%> Comments</span>
                      </div><!-- .entry-meta -->
                    </header><!-- .entry-header -->


                    <div class="entry-content">
                      <p><img src="<%=@event.avatar%>" alt="Keep this candle burn lighter together"></p>
                      <p><%=@event.description%></p>
                      
                    </div><!-- .entry-content -->


                    <footer class="entry-footer">
                      <span class="cat-links">Posted in <a href="/categories/<%=@category.id%>"><%=@category.title%></a></span>
                    </footer><!-- .entry-footer -->
                  </article><!-- .post -->

                    <!-- button logic/ join and leave -->
                    <% if current_user.id == @event.hosted_by %>
                         <%= form_tag "/events/#{@event.id}/edit", method: :get do %>
                            <input type="submit" value="Edit">
                          <% end %>
                          <%= form_tag "/events/#{@event.id}", method: :delete do %>
                            <input type="submit" value="DELETE">
                          <% end %>
                    <% else %>
                      <% if current_user.events.include?(@event) %>
                        <%= form_tag "/user_events/#{@user_event.id}", method: :delete do %>
                          <%= hidden_field_tag :event_id, @event.id %>
                            <button type ="submit" class="btn btn-default btn-lg">Leave Event!</button>
                        <% end %>
                      <% else %>
                        <%= form_tag "/user_events", method: :post do %>
                          <%= hidden_field_tag :event_id, @event.id %>
                            <button type ="submit" class="btn btn-default btn-lg">Join Event!</button>
                        <% end %>
                      <% end %>
                    <%= form_tag "/user_events/random", method: :get do %>
                      <%= hidden_field_tag :event_id, @event.id %>
                        <a href="/user_events/random"><button type ="submit" class="btn btn-default btn-lg">Connect with a user!</button></a>
                    <% end %>
                  <% end %>
                      </div>
                    </div>
