<h1> Create New Event Here </h1>

<%= form_tag '/events', method: :post do %>
<div>
  <%= label_tag :title %>
  <%= text_field_tag :title %>
</div>
<div>
  <%= label_tag :date %>
  <%= text_field_tag :date %>
</div>
<div>
  <%= label_tag :start_time %>
  <%= text_field_tag :start_time %>
</div>
<div>
  <%= label_tag :end_time %>
  <%= text_field_tag :end_time %>
</div>
<div>
  <%= label_tag :address %>
  <%= text_field_tag :address %>
</div>
<div>
  <%= label_tag :description %>
  <%= text_area_tag(:description, nil, size: "24x6") %>
</div>

<%= submit_tag "Create Event" %>

<% end %>